@model Item

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Product</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />

</head>
<body style="align-content: center">
    <div class="panel panel-success">
        <div class="panel-heading text-center"></div><h4>Add Product</h4>
    </div>
    <div class="panel-body">
        <form class="'p-a-1" asp-action="AddProduct" method="post">
            <div asp-validation-summary="All" :></div>
            <div class="form-group">
                <label asp-for="ItemName"> Product Name: </label>
                <input class="form-control" asp-for="ItemName" />
            </div>
            <div class="form-group">
                <label asp-for="Description"> Product Description: </label>
                <input class="form-control" asp-for="Description" />
            </div>

            <div class="form-group">
                <label asp-for="Price"> Price: </label>
                <input class="form-control" asp-for="Price" />
            </div>
            <div class="form-group">
                <label>Select Image</label>
                <select class="form-control" asp-for="ImagePath">
                    <option value="">Choose an option</option>
                    <option value="item1.png">Item 1</option>
                    <option value="item2.png">Item 2</option>
                    <option value="item3.png">Item 3</option>
                    <option value="item4.png">Item 4</option>
                    <option value="item5.png">Item 5</option>
                    <option value="item6.png">Item 6</option>
                    <option value="item7.png">Item 7</option>
                    <option value="item8.png">Item 8</option>
                    <option value="item9.png">Item 9</option>
                </select>
            </div>
            <div class="form-group">
                <label>Select category</label>
                <select class="form-control" asp-for="Category">
                    <option value="">Choose an option</option>
                    <option value="Wearables">Wearables</option>
                    <option value="Circuits">Circuits</option>
                    <option value="Wearables">Education</option>
                    <option value="Remote Control">Remote Control</option>
                </select>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit" asp-action="AddProduct" formmethod="post">
                    Add Product
                </button>
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>